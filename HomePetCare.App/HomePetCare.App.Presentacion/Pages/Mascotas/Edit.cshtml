@page
@model HomePetCare.App.Presentacion.Pages.EditModel
@{
    int MascotaId = Model.Mascota.Id; //Con esto se va a editar, con el identificador de la mascota.
}

<h2>Edición de los datos de la mascota</h2>
<form method="post">
    <input type="hidden" asp-for="Mascota.Id"/>
    <div class="form-group">
        <label asp-for="Mascota.MascotaId"></label>
        <input asp-for="Mascota.MascotaId" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.MascotaId"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Nombre"></label>
        <input asp-for="Mascota.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.PropietarioId"></label>
        <input asp-for="Mascota.PropietarioId" class="form-control">
        <span class="text-danger" asp-validation-for="Mascota.PropietarioId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
